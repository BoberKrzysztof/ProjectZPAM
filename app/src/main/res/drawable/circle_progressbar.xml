<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:innerRadiusRatio="4"
            android:shape="ring"
            android:useLevel="false"
            android:type="sweep"
            android:thicknessRatio="20.0">
            <solid android:color="#e0e0e0"/>
        </shape>
    </item>
    <item>
        <rotate
            android:pivotX="50%"
            android:pivotY="50%"
            android:fromDegrees="-90"
            android:toDegrees="-90">
            <shape
                android:innerRadiusRatio="4"
                android:shape="ring"
                android:angle="0"
                android:type="sweep"
                android:thicknessRatio="20.0">

                <gradient
                    android:type="sweep"
                    android:useLevel="false"
                    android:startColor="#DD1F11"
                    android:centerColor="#EDD606"
                    android:endColor="#02CC0A"
                    android:angle="0"/>

            </shape>
        </rotate>
    </item>
</layer-list>