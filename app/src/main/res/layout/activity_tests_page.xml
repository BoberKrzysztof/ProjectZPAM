<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_tests_page">

    <Button
        android:id="@+id/Reaction_test_button"
        android:layout_width="175dp"
        android:layout_height="60dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/button_design"
        android:text="Reaction test"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="374dp"
        android:layout_height="60dp"
        android:layout_marginBottom="650dp"
        android:text="Test Selection"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.761" />

    <Button
        android:id="@+id/Color_perception_button"
        android:layout_width="175dp"
        android:layout_height="60dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="375dp"
        android:background="@drawable/button_design"
        android:text="Color perception test"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Inteligence_test_button"
        android:layout_width="175dp"
        android:layout_height="60dp"
        android:layout_marginTop="375dp"
        android:layout_marginEnd="200dp"
        android:background="@drawable/button_design"
        android:text="Intelligence test"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/CISS_test_button"
        android:layout_width="175dp"
        android:layout_height="60dp"
        android:background="@drawable/button_design"
        android:text="CISS questionnaire"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar_color_testpage"
        style="?android:attr/progressBarStyle"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="550dp"
        android:indeterminateOnly="false"
        android:progressDrawable="@drawable/circle_progressbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:progress="0" />

    <ProgressBar
        android:id="@+id/progressBar_inteligence_testPage"
        style="?android:attr/progressBarStyle"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="550dp"
        android:layout_marginEnd="200dp"
        android:indeterminateOnly="false"
        android:max="120"
        android:progressDrawable="@drawable/circle_progressbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:progress="0" />

    <TextView
        android:id="@+id/inteligence_result"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_marginEnd="200dp"
        android:text="Result:   "
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar_inteligence_testPage" />

    <TextView
        android:id="@+id/result_color_testpage"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_marginStart="200dp"
        android:text="Result:   "
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar_color_testpage" />


    <TextView
        android:id="@+id/reaction_result_best_testpage"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="200dp"
        android:text="Best result: "
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reaction_result_average_testpage"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="250dp"
        android:text="Average result: "
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="370dp"
        android:layout_height="183dp"
        android:layout_marginBottom="450dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:text="Informations about tests"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="26sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:text="1. Color perception test: The task is to determine the number found in the picture and write it in the text box below the picture. You will be shown 10 pictures from which you must have at least 8 correct answers."
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="31dp"
                tools:layout_editor_absoluteY="161dp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:text="2. Reaction test: The test is to measure your reaction. On the page you will have a start button and a colored wheel. After pressing the button you will have 3 seconds to prepare then at random moment the wheel will light up green at this point you must press the wheel. When you finish your reaction time will be displayed."
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="31dp"
                tools:layout_editor_absoluteY="161dp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:text="3. Intelligence test: The test contains 30 questions on logic. Each question has 6 or 8 answer choices and only 1 correct answer. You must answer at least 25 questions correctly to pass."
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="31dp"
                tools:layout_editor_absoluteY="161dp" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:text="4. CISS questionnaire: A questionnaire for diagnosing stress coping styles. The CISS consists of 18 statements about different behaviors people may engage in during stressful situations. The respondent indicates on a 5-point scale the frequency with which they take a given action in difficult, stressful situations."
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="31dp"
                tools:layout_editor_absoluteY="161dp" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/logout"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="340dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="650dp"
        android:background="@drawable/button_design"
        android:text="Log Out"
        android:textSize="10sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>